{
  "version": "2.0.0",
  "problemMatcher": [],
  "presentation": {
    "focus": true,
    "clear": true,
    "panel": "shared",
    "reveal": "always",
  },
  "options": {
    "cwd"  : "${workspaceFolder}"
  },
  "tasks": [
  { "type": "shell", "label": "test", "icon": { "id": "beaker" , "color": "terminal.ansiCyan"  }, "group": { "kind": "test"  }, "command": "mocha" , "args": [ "${file}"       ]},
  { "type": "shell", "label": "run:", "icon": { "id": "bug"    , "color": "terminal.ansiGreen" }, "group": { "kind": "build" }, "command": "node"  , "args": [ "${file}"       ]},
  { "type": "shell", "label": "subl", "icon": { "id": "code"   , "color": "terminal.ansiYellow"}, "group": { "kind": "none"  }, "command": "subl"  , "args": [ "-a", "${file}" ], "presentation": { "reveal": "never" }},
  { "type": "shell", "label": "open", "icon": { "id": "preview", "color": "terminal.ansiBlue"  }, "group": { "kind": "none"  }, "command": "open"  , "args": [ "-a", "'Google Chrome'", "${file}" ], "presentation": { "reveal": "never" }},
  ]
}





